        <img src="https://cdn.shopify.com/s/files/1/1950/4033/products/SCR_SIdeshot_wShadow_Pitchblack_oStr_2048x2048.jpg?v=1498135355" alt="My default image">
      </picture>
    </div>
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-next-icon"><i class="fa fa-angle-right"></i></div>
  <div class="swiper-button-prev-icon"><i class="fa fa-angle-left"></i></div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"></script>
 
<script>
  var mySwiper = new Swiper ('.swiper-container', {
    loop: true,
    keyboardControl: true,
    pagination: '.swiper-pagination',
    paginationBulletRender: function (swiper, index, className) {
      return '<span class="' + className + '"><i class="fa fa-angle-up"></i></span>';
    },
    paginationClickable: true,
    spaceBetween: -30,
    breakpoints: {
    480: {
      spaceBetween: 30
      }
    },
    nextButton: '.swiper-button-next-icon',
    prevButton: '.swiper-button-prev-icon',
    autoplay:6000,
    autoplayDisableOnInteraction:false,
    speed:1000,
    grabCursor:true,
    roundLengths: true
  });
</script>
<hr>
</body>
</html>